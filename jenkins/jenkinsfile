pipeline {
  agent any

  environment {
    TF_DIR = 'terraform'
    ANSIBLE_DIR = 'ansible'
  }

  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/subbu1816/aws-devops-pipeline.git
'
      }
    }

    stage('Terraform Init') {
      steps {
        dir("${TF_DIR}") {
          sh 'terraform init'
        }
      }
    }

    stage('Terraform Apply') {
      steps {
        dir("${TF_DIR}") {
          sh 'terraform apply -auto-approve'
        }
      }
    }

    stage('Wait for EC2') {
      steps {
        sh 'sleep 60'
      }
    }

    stage('Run Ansible') {
      steps {
        dir("${ANSIBLE_DIR}") {
          sh 'ansible-playbook -i inventory playbook.yml'
        }
      }
    }
  }
}

