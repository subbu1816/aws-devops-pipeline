pipeline {
  agent any

  environment {
    TF_DIR = 'terraform'
    ANSIBLE_DIR = 'ansible'
  }

  stages {
    stage('Checkout Code') {
      steps {
        git 'https://github.com/YOUR-USERNAME/aws-devops-pipeline.git'
      }
    }

    stage('Terraform Init & Apply') {
      steps {
        dir("${env.TF_DIR}") {
          sh 'terraform init'
          sh 'terraform apply -auto-approve'
        }
      }
    }

    stage('Wait for EC2 Boot') {
      steps {
        sh 'sleep 60'
      }
    }

    stage('Run Ansible Playbook') {
      steps {
        dir("${env.ANSIBLE_DIR}") {
          sh 'ansible-playbook playbook.yml'
        }
      }
    }
  }
}

